<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/dice_screen_bw">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:baselineAligned="false"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dice_no6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no10"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="0.4"
                android:background="@color/colorBlack"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:text="@string/you_win"
                android:textColor="@color/colorOrange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/order_container"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1.2">

                <Button
                    android:id="@+id/btn_call"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/colorYellow"
                    android:elevation="10dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/call"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/spinner_container"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/press_start_2p"
                            android:padding="5dp"
                            android:text="@string/number_of_dice"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/totalSpinner"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/press_start_2p"
                            android:padding="5dp"
                            android:text="@string/kind_of_dice"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/typeSpinner"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_bid"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.3"
                    android:background="@color/colorOrange"
                    android:elevation="10dp"
                    android:fontFamily="@font/press_start_2p"
                    android:text="@string/bid"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_bid_info"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="0.4"
                android:background="@color/colorBlack"
                android:fontFamily="@font/press_start_2p"
                android:gravity="center"
                android:text="@string/you_win"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dice_no1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />

                <ImageView
                    android:id="@+id/dice_no5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/dice" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>